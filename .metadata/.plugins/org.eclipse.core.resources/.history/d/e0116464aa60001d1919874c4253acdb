package pattern;

public class Arrow {

	 public static void main(String[] args)
	    {
	   

	      int n =7;
	        
	        // Print i number of stars
	        for (int i=1; i<=n; i++)
	        {
	            for (int j = i; j <= n; j++)
	            {
	                System.out.print("*");
	            }
	            for (int k = 1; k <= i*2-2; k++)
	            {
	                System.out.print(" ");
	            }
	            for (int l = i; l <= n; l++)
	            {
	                System.out.print("*");
	            }
	            System.out.println();
	        }
	        
	        for (int i = 1; i <= n; i++)
	        {
	            for (int j = 1; j <= n; j++)
	            {
	            	if(j==1 || j==(n*2))
	                System.out.print("*");
	            	else
	            		System.out.print(" ");
	            }
	           /* for (int k = i*2-2; k < n*2-2; k++)
	            {
	                System.out.print(" ");
	            }
	            */for (int l = n/2 ; l <= n; l++)
	            {
	            	if(l==n/2 || l==n || l==(n*2))
	                System.out.print("*");
	            }
	            
	            System.out.println();
	        }
	    }
}
