package pattern;

public class Arrow {

	 public static void main(String[] args)
	    {
	   
		 int n=5;
		 int i, j;
		   
	        // Printing the upper triangle
	        for (i = 0; i < n; i++) {
	   
	            // Left space triangle
	            for (j = i + 1; j < n; j++)
	                System.out.print(" ");
	   
	            // Center Star triangle
	            for (j = 0; j < (2 * i + 1); j++)
	                System.out.print("*");
	   
	            System.out.println();
	        }
	   
	        // Printing Lower rectangles
	        for (i = 0; i < 3; i++) 
	        {
	        	if(i==2)
	        	 System.out.print("*");
	            // Left rectangle
	            for (j = 0; j < 1; j++)
	                System.out.print("*");
	   
	            // Center Space rectangle
	            for (j = 2; j < (2 * n - 1); j++)
	                System.out.print(" ");
	   
	            // Right rectangle
	            for (j = n; j > n-1; j--)
	                System.out.print("*");
	            
	            
	            	
	   
	            System.out.println();
	        }
	    }
}
